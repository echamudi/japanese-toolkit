{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "target": "es6",
        "module": "CommonJS",
        "rootDir": "./src",
        "outDir": "./dist/commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*.js",
        "./src/**/*.ts"
    ]
}
