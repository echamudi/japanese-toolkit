{
  "name": "root",
  "private": true,
  "scripts": {
    "watch": "npx lerna run --parallel watch",
    "install-all": "npm install && npx lerna exec -- npm install && npx lerna bootstrap",
    "build": "npx lerna run --concurrency 1 --stream build",
    "test": "npx lerna run --concurrency 1 --stream test",
    "publish:next": "npx lerna publish --dist-tag next",
    "publish:latest": "npx lerna publish"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "lerna": "^3.22.1",
    "typescript": "^3.9.6",
    "rimraf": "^3.0.2"
  }
}
